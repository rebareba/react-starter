$color-black-range = {
    '10':0.1,
    '20':0.2,
    '30':0.3,
    '40':0.4,
    '50':0.5,
    '60':0.6,
    '70':0.7,
}

.ctw
  color:rgba(255,255,255,1)

.ctb
  color:rgba(0,0,0,1)

.cfw
  background-color:rgba(255,255,255,1)

.cfb
  background-color:rgba(0,0,0,1)

// 任意色文字
for $key, $value in $color-else-range
  .ct{$key}
    color: $value

// 任意色填充
for $key, $value in $color-else-range
  .cf{$key}
    background-color: $value

// 白色填充色
for $key, $value in $color-white-range
  .cfw{$key}
    background-color: rgba(255,255,255,$value)

// 白色文字
for $key, $value in $color-white-range
  .ctw{$key}
    color: rgba(255,255,255,$value)

// 黑色填充色
for $key, $value in $color-black-range
  .cfb{$key}
    background-color: rgba(0,0,0,$value)

// 黑色文字
for $key, $value in $color-black-range
  .ctb{$key}
    color: rgba(0,0,0,$value)

.ciw
  fill #fff
.ciGray
  fill #999

.ctMain
  color #00b7ff
  font-weight: bold
.ctNote
  color #f70
  font-weight: bold

