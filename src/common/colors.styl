  '2': #222222,
  '1a': #1a1a1a,
  '1': #111111,
  '0': #000000,
}

$color-white-range = {
    '84':0.84,
    '64':0.64,
    '60':0.6,
    '56':0.56,
    '52':0.52,
    '48':0.48,
    '44':0.44,
    '40':0.4,
    '36':0.36,
    '32':0.32,
    '28':0.28,
    '24':0.24,
    '20':0.2,
    '16':0.16,
    '12':0.12,
    '10':0.1,
    '8':0.08,
    '6':0.06,
    '4':0.04,
    '2':0.02,
