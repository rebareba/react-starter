.loginMain
  position absolute
  width 100%
  height 100%
  background-size: cover
  min-width 1100px
  overflow: auto
  .formContainer
    position: absolute
    left: 50%
    top: 50%
    margin-left:-200px 
    margin-top:-250px
    width: 400px
    height: 500px
    padding: 50px 20px
  .title
    text-align center
    font-size 24px
    font-family 'Myriad Pro', 'Helvetica Neue', Arial, Helvetica, sans-serif
    font-weight 400
  form
    text-align: center
    input
      outline-style none  
      border 1px solid #505050
      height 40px
      padding 6px 11px
      font-size 16px
      color #fff
      width 90%
      margin-bottom 30px
      background transparent 
      border-top none
      border-left none
      border-right none
    input:focus
    input:hover
      border-color #007EFF 

    .submitButton
      color #ffffff
      background-color #1890ff
      border-color #1890ff
      border-radius 4px
      height 40px 
      width 90%
      cursor pointer
    .errorMessage
      color: red
      font-size: 14px